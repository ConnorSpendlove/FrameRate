<!DOCTYPE html>
<html>

<head>
  <!--Import Google Icon Font-->
  <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
  <!--Import materialize.css-->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/css/materialize.min.css">
  <!--Let browser know website is optimized for mobile-->
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Rubik:ital,wght@0,300..900;1,300..900&display=swap"
    rel="stylesheet">
</head>

<style>
  body {
    font-family: "Rubik", Arial, sans-serif;
    font-optical-sizing: auto;
    font-weight: 400;
    font-style: normal;
  }

  nav ul li a {
    color: #fff;
  }

  .carousel {
    height: 400px;
    position: relative;
  }

  .carousel img {
    height: 300px;
    object-fit: cover;
  }

.plus-sign-container {
    position: absolute;
    top: 70%;
    left: 50%;
    transform: translate(-50%, -50%);
    display: none;
    pointer-events: none;
    width: 100px;
    height: 100px;
  }

  .plus-sign-container img {
    width: 100%;
    height: auto;
  }

  .carousel-item:hover .plus-sign-container {
    display: block;
    opacity: 1;
  }

  .container {
    margin-top: 20px;
  }

  .custom-nav {
    max-width: 80%;
    margin: 0 auto;
    margin-top: 1%;
  }

  .custom-brand-logo {
    margin-left: 20px;
  }

  .input-field input[type="text"]:focus {
    border-bottom-color: #f44336 !important;
    box-shadow: 0 1px 0 0 #f44336 !important;
  }

  .input-field input[type="text"]:focus+label {
    color: white !important;
  }

  .input-field input[type="text"] {
    color: white;
  }

  #month-carousel {
    margin-top: 50px;
    width: 75%;
    height:1000px;
    margin-left: auto;
    margin-right: auto;
  }
</style>
</head>

<body class="grey darken-4">
  <!-- Navbar -->
  <nav class="custom-nav red">
    <div class="nav-wrapper">
      <a href="#" class="brand-logo custom-brand-logo">FrameRate</a>
      <ul id="nav-mobile" class="right hide-on-med-and-down">
        <li><a href="#">Home</a></li>
        <li><a href="#">Profile</a></li>
      </ul>
    </div>
  </nav>

  {{{body}}}

  {{!-- JQuery --}}
  <script type="text/javascript" src="https://code.jquery.com/jquery-1.12.0.min.js"></script>
  <!-- Materialize JavaScript -->
  <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.min.js"></script>
  <script>
    // We can customize the carousel by putting parameters in the carousel() function. For example, carousel({fullWidth: true}) would make the carousel a full width slider.
    $(document).ready(function () {
      $('.carousel').carousel();
    }); 
  </script>
</body>

</html>