<div
  class="container grey darken-3"
  style="margin-bottom: 50px; padding: 25px; border-radius: 10px;"
>
  <div class="row">

    <h4 class="white-text" style="margin-bottom: 40px;">Create an account here</h4>

    <div class="col s6">

      <div class="row">
        <form class="col s12">
          <div class="row">
            <div class="input-field col s12" style="margin-bottom: 0px;">
              <textarea
                id="user-singup"
                class="materialize-textarea"
              ></textarea>
              <label for="user-singup">Please choose a username</label>
            </div>
          </div>
        </form>
      </div>
      <div class="row">
        <form class="col s12 center-align">
          <div class="row center-align">
            <div class="input-field col s12">
              <textarea
                id="pass-signup"
                class="materialize-textarea"
              ></textarea>
              <label for="pass-signup">Please choose a password</label>
            </div>
          </div>
        </form>
      </div>

      <button
        class="btn waves-effect waves-light red darken-4"
        style="margin-bottom: 50px; border-radius: 5px;"
        type="submit"
        name="action"
      >Create Account
        <i class="material-icons right">add_circle_outline</i>
      </button>
    </div>
  </div>
</div>